{
  "name": "Opportunity Cost",
  "description": "See every price in satoshis. Understand the Bitcoin opportunity cost of your purchases.",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [
    "activeTab", 
    "storage", 
    "contextMenus",
    "https://api.coingecko.com/*"
  ],
  "browser_action": {
    "default_title": "Opportunity Cost",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "background": {
    "scripts": ["browser-polyfill.js", "storage.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "icons/*.svg",
    "newsletter.html"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "opportunity-cost@example.com",
      "strict_min_version": "57.0"
    }
  }
}